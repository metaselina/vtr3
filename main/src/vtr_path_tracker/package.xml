<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <!--REQUIRED HEADER-->
  <name>vtr_path_tracker</name>
  <version>1.0.0</version>
  <description>VTR3 path-tracking/control package.</description>
  <maintainer email="ben.congram@robotics.utias.utoronto.ca">Benjamin Congram</maintainer>
  <license>BSD</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <build_depend>eigen</build_depend>

  <!-- ROS dependencies -->
  <depend>rclcpp</depend>
  <depend>geometry_msgs</depend>
  <depend>std_msgs</depend>

  <!-- VTR dependencies -->
  <depend>lgmath</depend>
  <depend>steam</depend>
  <depend>vtr_common</depend>
  <depend>vtr_logging</depend>
  <depend>vtr_messages</depend>
  <depend>vtr_pose_graph</depend>

  <!-- Testing -->
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_cmake_lint_cmake</test_depend>
  <test_depend>ament_cmake_xmllint</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>

</package>
